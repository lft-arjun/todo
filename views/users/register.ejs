
<% include ../partials/admin_header %>
<div id="wrapper">

	<!-- Navigation -->
	<% include ../partials/admin_topnav %>

	<div id="page-wrapper">

		<div class="container-fluid">

			<!-- Page Heading -->
			<div class="row">
				<div class="col-lg-12">
					<h1 class="page-header">
						User Management <small></small>
					</h1>
					<ol class="breadcrumb">
						<li class="active">
							<i class="fa fa-dashboard"></i> Register
						</li>
					</ol>
				</div>
			</div>
			<!-- /.row -->
			<div class="row">
				<div class="col-lg-12">
					<% if(errors) { %>
					<ul class="has-error">
						<% errors.forEach(function(error){ %>
						<li><%= error.msg %></li>
						<%})%>
					</ul>
					<%}%>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-6">
					<form action="/users/register" method="post" >
						<div class="form-group">
							<label for="name">Name</label>
							<input type="text" name="name" class="form-control" id="name" value="<%= data.name ? data.name : '' %>" placeholder="Name">
						</div>
						<div class="form-group">
							<label for="email1">Email address</label>
							<input type="email" name="email" class="form-control" id="email1" placeholder="Email">
						</div>
						<div class="form-group">
							<label for="password">Password</label>
							<input type="password" name="password" class="form-control" id="password" placeholder="Password">
						</div>
						<div class="form-group">
							<label for="password">Address</label>
							<input type="text" name="address" class="form-control" id="address" placeholder="Address">
						</div>
                        <div class="form-group">
                            <label for="sel1">Role:</label>
                            <select class="form-control" id="sel1" name="role">
                                <option value="">Select Any</option>
                                <option value="1">Admin</option>
                                <option value="2">Author</option>
                                <option value="3">User</option>
                            </select>
                        </div>
						<div class="form-group">
							<label for="profile_pic">Photo</label>
							<input type="file" id="profile_pic" name="profile_pic">
						</div>
						<button type="submit" class="btn btn-default">Submit</button>
					</form>
				</div>
			</div>

		</div>
		<!-- /.container-fluid -->

	</div>
	<!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->
<% include ../partials/admin_footer %>

